
<div class="row">
  <div class="col-md-4">
    <h2 class="navbar-brand mb-0"><%= current_user.username %>'s Notes</h2>

  </div>

</div>


<!-- loop through posts, posting each one -->



    <% current_user.posts.each do |post| %>
    <div class="content">
        <div class="post-title"><strong>Title:</strong> <%= post.title %> 

            </div>

        <div class="post-content">
        Content: <%= post.content %>

        </div><br>

           





<!-- delete button for posts -->



    <form method="POST" action="/posts/destroy">
        <input type="submit" value="delete" class="btn">
            </form>

</div>
<% end %>


</div>










<div id="myModal2" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Post Modal Content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Write something new!</h4>
      </div>
      <div class="modal-body">
        <p> <%= erb(:post, :layout => false) %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>




