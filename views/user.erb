
<div class="row">
<h2><%= @user.username %>'s notes</h2>
            <% if current_user %>

                <form method="POST" action="/logout">
                <input type="submit" class="btn btn-info btn-md" value="Logout">
                    
                </form>
                <% end %>
<br>
</div>


<!-- loop through posts, posting each one -->



    <% current_user.posts.each do |post| %>
        <div class="post-title"><strong>Title:</strong> <%= post.title %> 

            </div>

        <div class="post-content">
        Content: <%= post.content %>

        </div><br>
           





<!-- delete button for posts -->



    <form method="POST" action="/posts/destroy">
        <input type="submit" value="delete" class="btn">
            </form>


<% end %>

</div>










<div id="myModal2" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Post Modal Content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Write something new!</h4>
      </div>
      <div class="modal-body">
        <p> <%= erb(:post, :layout => false) %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>




